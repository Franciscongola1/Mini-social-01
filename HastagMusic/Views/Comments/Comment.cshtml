@model HastagMusic.Models.Comments
@{
    ViewData["title"] = "Comentarios";
}
<!--------------------------------------------------------->
<div class="post-container comments-box">
@foreach (var item in Model.ListPost)
{
  bool gosto = UserManagerServices.GetGostos().Any(g => g.UserID== ViewBag.id && g.PostID == item.Id);  
    int qtdGosto = UserManagerServices.GetGostos().Count(i =>i.PostID == item.Id);
    int qtdComments = UserManagerServices.GetCommets().Count(q =>q.PostID == item.Id);

    <div class="post-row">
        <div class="user-profile">
            <img src="~/icons/perfil.png" alt="">
            <div class="user-profile-text">
                <p>@item.UserName</p>
                <small>@item.Hora</small>
            </div>
        </div>
            <a href="#" class="btn-right">⫶</a>
    </div>

        <div>
            <p class="post-text">@item.Content</p>
        </div>
        <div>
            @if(item.Type == "Image")
            {
                <img src="~/uploads/imagens/@item.FileName" alt="" class="post-img">
                <div class="post-row">
                    <div class="actividades-icon">
                        @if(gosto)
                        {
                            <form asp-action="NaoGostar" asp-route-userId="@item.Id" method="post">
                                <input type="submit" class="btn btn-gosto btn-liked"/><small>@qtdGosto</small>
                            </form>
                        }
                        else{
                            <form asp-action="Gostar" asp-route-userId="@item.Id" method="post">
                                <input type="submit"  class="btn btn-gosto"/><small>@qtdGosto</small>
                            </form>
                        }

                        <form asp-action="Comentarios" asp-controller="Comentario" asp-route-userId="@item.Id" method="post">
                            <input type="submit" value="Comentar" class="btn btn-comentario"/><small>@qtdComments</small>
                        </form>
                    </div>
                </div>

            }else{
                 <video class="post-video" controls>
                    <source src="~/uploads/videos/@item.FileName" type="video/mp4" class="post-img">
                    Your browser does not support the video tag.
                </video>
                <div class="post-row">
                    <div class="actividades-icon">
                        @if(gosto)
                        {
                            <form asp-action="NaoGostar" asp-route-userId="@item.Id" method="post">
                                <input type="submit" class="btn btn-gosto btn-liked"/><small>@qtdGosto</small>
                            </form>
                        }
                        else{
                            <form asp-action="Gostar" asp-route-userId="@item.Id" method="post">
                                <input type="submit"  class="btn btn-gosto"/><small>@qtdGosto</small>
                            </form>
                        }
                         <form asp-action="Comentarios" asp-controller="Comentario" asp-route-userId="@item.Id" method="post">
                            <input type="submit" value="Comentar" class="btn btn-comentario"/><small>@qtdComments</small>
                        </form>
                    </div>
                </div>
            }
        </div>


        <div>
            <form asp-action="Add" asp-controller="comments" asp-route-userId="@item.Id" method="post">
                <input asp-for="Comentarios">
                <button type="submit">Comentar</button>
            </form>
        </div>

}
@foreach (var item in Model.ListComments.Where(i=>i.PostID ==ViewBag.idpost))
{
    <div class="comentarios">
        <div class="post-row">
        <div class="user-profile">
            <img src="~/icons/perfil.png" alt="">
            <div class="user-profile-text">
                <p>@item.Nomeuser</p>
                <small>@item.Hora</small>
            </div>
        </div>
            <a href="#" class="btn-right">⫶</a>
    </div>
    <div class="comentarios-text">
        <p>@item.Comentarios</p>
    </div>
    </div>
}
</div>
<!---------------------------------------------------------->